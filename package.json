{
  "name": "nodejs.org",
  "private": true,
  "version": "1.0.0",
  "description": "Nodejs.org Website",
  "homepage": "https://nodejs.org",
  "repository": "https://github.com/nodejs/nodejs.org",
  "author": "Node.js Website Working Group",
  "license": "MIT",
  "engines": {
    "node": "v18"
  },
  "scripts": {
    "serve": "next dev",
    "build": "next build",
    "postbuild": "next-sitemap",
    "start": "next start",
    "export": "next export -o build",
    "deploy": "npm-run-all build export",
    "lint:js": "eslint \"**/*.{js,jsx,ts,tsx}\" --cache --cache-file .eslintjscache --report-unused-disable-directives",
    "lint:md": "eslint \"**/*.{md,mdx}\" --cache --cache-file .eslintmdcache",
    "lint:scss": "stylelint --config .stylelintrc \"styles/**/*.{css,sass,scss}\"",
    "lint": "npm-run-all lint:js lint:md lint:scss --parallel",
    "lint:fix": "npm-run-all \"lint:js -- --fix\" \"lint:md -- --fix\" \"lint:scss -- --fix\" --parallel",
    "prettier": "prettier \"**/*.{ts,tsx,js,scss,yml}\" --check",
    "prettier:fix": "npm run prettier -- --write",
    "format": "npm-run-all prettier:fix lint:fix",
    "scripts:release-post": "node scripts/release-post/index.mjs"
  },
  "dependencies": {
    "@mdx-js/react": "^2.3.0",
    "classnames": "^2.3.2",
    "feed": "^4.2.2",
    "gray-matter": "^4.0.3",
    "handlebars": "^4.7.7",
    "highlight.js": "^11.7.0",
    "isomorphic-dompurify": "^1.1.0",
    "next": "^13.2.3",
    "next-sitemap": "^4.0.5",
    "nextra": "^2.2.19",
    "node-version-data": "^1.1.0",
    "npm-run-all": "^4.1.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-intl": "^6.2.10",
    "sass": "^1.58.3",
    "semver": "^7.3.8",
    "strftime": "^0.10.1",
    "stylelint-config-standard": "^30.0.1",
    "swr": "^2.1.0"
  },
  "devDependencies": {
    "@builder.io/partytown": "^0.7.5",
    "@next/eslint-plugin-next": "^13.2.3",
    "@types/node": "^18.15.1",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/semver": "^7.3.13",
    "@types/strftime": "^0.9.4",
    "critters": "^0.0.16",
    "cross-env": "^7.0.3",
    "eslint": "^8.35.0",
    "eslint-config-next": "^13.2.3",
    "eslint-config-prettier": "^8.7.0",
    "eslint-mdx": "^2.0.5",
    "eslint-plugin-mdx": "^2.0.5",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.4",
    "remark-preset-lint-node": "^3.4.0",
    "remark-preset-prettier": "^2.0.1",
    "sharp": "^0.31.3",
    "stylelint": "^15.2.0",
    "stylelint-config-recommended-scss": "^9.0.1",
    "stylelint-order": "^6.0.3",
    "stylelint-selector-bem-pattern": "^2.1.1",
    "typescript": "^4.9.5"
  }
}
