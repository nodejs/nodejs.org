{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "lint:js": {
      "inputs": ["**/*.{json,mjs,js,ts,tsx}"]
    },
    "lint:css": {
      "inputs": ["**/*.css"],
      "outputs": [".stylelintcache"]
    },
    "lint:fix": {
      "cache": false
    },
    "lint:types": {
      "cache": false
    },
    "storybook": {
      "cache": false,
      "persistent": true
    },
    "storybook:build": {
      "inputs": ["**/*.{ts,tsx,mjs,css,json}"],
      "outputs": ["storybook-static/**"]
    },
    "test:unit": {
      "inputs": ["**/*.{ts,tsx,mjs}"]
    }
  }
}
