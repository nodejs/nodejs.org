{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "paths": { "@/*": ["./*"] },
    "baseUrl": ".",
    "outDir": "dist",
    "rootDir": "."
  },
  "include": ["lib", "types.d.ts"],
  "exclude": ["node_modules", "dist"]
}
