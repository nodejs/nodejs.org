<!DOCTYPE html>
<html lang="{{site.locale}}"{{#if site.rtl}} dir="rtl"{{/if}}>
{{> html-head }}

<body>
  {{> header }}

  <div id="main">
    <div class="container">

      <article>
        <div class="blogpost-header">
          <h1>{{title}}</h1>
          <span class="blogpost-meta">{{#if author}}{{site.by}} {{author}}, {{/if}}{{#if date}}<time datetime="{{ date }}">{{ strftime date }}</time>{{/if}}</span>
        </div>

        {{{ contents }}}
      </article>

    </div>
  </div>

  {{> footer }}
</body>
</html>
