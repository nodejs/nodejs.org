<!DOCTYPE html>
<html lang="{{site.locale}}">
{{> html-head }}

<body>
    {{> header }}

    <div id="main">
        <div class="container">

            <article>
                <div class="blogpost-header">
                    <h1>{{title}}</h1>
                    <span class="blogpost-meta">{{#if author}}{{i18n site.by}} {{author}}, {{/if}}<time datetime="{{ date }}">{{ strftime date }}</time></span>
                </div>

                {{{ contents }}}
            </article>

        </div>
    </div>

    {{> footer }}
</body>
</html>
