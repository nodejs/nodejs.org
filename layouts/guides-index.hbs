<!DOCTYPE html>
<html lang="{{site.locale}}">
{{> html-head }}

<body>
  {{> header }}

  <div id="main">
    <div class="container has-side-nav">

      {{> navigation key='docs'}}

      <article>
        {{{ contents }}}

        <ul class="guides-index">
          {{#each collections.guides}}
          <li><a href="/{{../site.locale}}/{{ path }}/">{{ title }}</a></li>
          {{/each}}
        </ul>
      </article>

    </div>
  </div>

  {{> footer }}
</body>
</html>
